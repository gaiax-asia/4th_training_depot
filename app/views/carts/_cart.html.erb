<h2><%= t('.title') %></h2>
<div id="page_links_cart">
  <%= will_paginate @carts_line_items, param_name: 'cart_page', params: {controller: "store", action: "refresh_cart"}, renderer: 'RemoteLinkRenderer' if @carts_line_items%>
</div>

<table>
  <%= render(@carts_line_items) if @carts_line_items %>
	<tr class="total_line">
		<td colspan="2">Total</td>
		<td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
	 </tr>
</table>
<%= button_to t('.checkout'), new_order_path, method: :get %>
<%= button_to t('.empty'), cart, method: :delete, data: { confirm: 'Are you sure?' } %>